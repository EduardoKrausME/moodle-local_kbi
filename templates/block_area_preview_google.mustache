<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load("current", {"packages": ["corechart"]});
    google.charts.setOnLoadCallback(drawArea_{{{koperebiitem_id}}});

    function drawArea_{{{koperebiitem_id}}}() {
        var data = google.visualization.arrayToDataTable([{{{arrayareas}}}]);

        var options = {
            backgroundColor: "transparent",
            width: "100%",
            legend: {position: "right"},
            curveType: "function",
            chartArea: {
                backgroundColor: "transparent",
                right: 0,
                left: 60,
            }
        };

        var chart = new google.visualization.AreaChart(document.getElementById("area_{{{koperebiitem_id}}}"));
        chart.draw(data, options);
    }

    window.addEventListener("resize", function() {
        timeout_drawArea_{{{koperebiitem_id}}} = setTimeout(drawArea_{{{koperebiitem_id}}}, 500)
    }, false);
</script>
<div id="area_{{{koperebiitem_id}}}" style="height: 400px;"></div>